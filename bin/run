#!/bin/bash
set -exu

./bin/stop

docker-compose up -d --build

for i in {1..400}; do
    if curl http://localhost:8080/ui; then
        python -m webbrowser "http://localhost:8080/ui"
        exit
    else
        echo "Waiting for the services to start..."
        sleep 3
        continue
    fi
done

echo "Service did not start."